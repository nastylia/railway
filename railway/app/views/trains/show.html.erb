<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Route:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    No route
  <% end %>
</p>

<p>
  <strong>Carriages numbers list:</strong>
  <% @train.carriages.ordered(@train.sort).each do |carriage| %>
    <%= link_to "#{carriage.number}", carriage %>
  <% end %>
</p>

<p>
  <%= link_to "Add carriage", new_train_carriage_path(@train) %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
