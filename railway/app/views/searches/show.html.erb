<h1><%= t('.title') %></h1>
<div class="row">
  <%= form_tag search_path do %>
    <div class="col-md-4">
      <%= select_tag :departure_station, options_from_collection_for_select(@stations, :id, :title), class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= select_tag :arrival_station, options_from_collection_for_select(@stations, :id, :title), class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= submit_tag t('.find'), class: "btn btn-primary" %>
    </div>
 <% end %>
</div>

