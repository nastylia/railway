<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td>
        <div id="route_title_<%= route.id %>">
          <%= route.name %>
        </div>
        
        <%= render 'form', route: route, hidden: true %></td>
        <td><%= link_to t('common.show'), admin_route_path(route) %></td>
        <td><%= link_to t('common.edit'), '', class: 'edit_route', data: {route_id: route.id} %></td>
        <td><%= link_to t('common.delete'), admin_route_path(route), method: :delete, data: { confirm: t('common.sure_or_not') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_route'), new_admin_route_path %>
