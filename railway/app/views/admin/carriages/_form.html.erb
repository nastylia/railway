<%= form_for [:admin, train, carriage] do |f| %>
  <% if carriage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(carriage.errors.count, "error") %> prohibited this cariage from being saved:</h2>

      <ul>
      <% carriage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= f.label :type %>
    <%= f.select :type, carriage.get_all_types_values, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :train %>
    <%= f.collection_select :train_id, Train.all, :id, :number, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :up_seats %>
    <%= f.number_field :up_seats, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :down_seats %>
    <%= f.number_field :down_seats, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :side_up_seats%>
    <%= f.number_field :side_up_seats, class: "form-control"  %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :side_down_seats %>
    <%= f.number_field :side_down_seats, class: "form-control"  %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :sit_seats %>
    <%= f.number_field :sit_seats, class: "form-control"  %>
  </div>

  <div class="actions form-group col-md-12">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
